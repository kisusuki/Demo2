<h1 class="text text-warning mb-2 text-center">Toy Store</h1>
<a class="btn btn-danger" href="/admin">Admin</a>
<div class="card-group text-center" class="border">
   <div class="row" >
      {{#each toys }}
      <div class="card col-md-3 m-3" >
         <img class="card-img-top mt-3" src="{{ image }}" width="200" height="200">
         <div class="card-body">
            <h4 class="card-title text-success">{{ name }}</h4>
            <h3 class="card-title text-danger">${{ price }}</h3>
            <p class="fw-bold card-text text-primary">{{ brand }}</p>
            <h6>{{ detail }}</h3>
            <form action="/order" method="post">
               <input type="hidden" name="id" value="{{_id}}"> 
               <input type="hidden" name="price" value="{{price}}">
               <input class="form-control mb-3" type="number" name="order_quantity" 
               min="1" max="{{quantity}}">
               <input class="btn btn-danger" type="submit" value="Order">
            </form>
         </div>
      </div>
      {{/each}}
   </div>
</div>